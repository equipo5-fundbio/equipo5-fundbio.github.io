                        markup: True
                        font_size: 16
                        pos_hint: {"center_x": 0.5}
                        md_bg_color: app.theme_cls.primary_dark
                        on_release: 
                            app.root.current = "treatment_window"
                            app.root.get_screen("login_window").manager.transition.direction = "left"
                    
                    MDFillRoundFlatButton:
